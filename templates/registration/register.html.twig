{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="col-6 mx-auto">
    <h1 class="text-warning">Créer votre compte</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        {{ form_row(registrationForm.civilite, {
            label: 'Civilité'
        }) }}

        {{ form_row(registrationForm.prenom, {
            label: 'Prénom'
        }) }}
        {{ form_row(registrationForm.nom, {
            label: 'Nom de famille'
        }) }}

        {{ form_row(registrationForm.email, {
            label: 'Adresse E-mail'
        }) }}


        <button type="submit" class="btn btn-outline-success m-3">S'inscrire</button>
    {{ form_end(registrationForm) }}</div>
{% endblock %}
